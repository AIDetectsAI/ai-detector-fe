---
import UploadIcon from '../assets/upload.svg';
import ClockIcon from '../assets/clock.svg';
import CogIcon from '../assets/cog.svg';
import UserIcon from '../assets/userEmpty.svg';
import '../styles/global.css';
import '../styles/sidebar.css';

const iconMap = {
  upload: UploadIcon,
  clock: ClockIcon,
  cog: CogIcon,
};

const navItems = [
  { label: 'Upload', path: '/send', icon: 'upload' },
  { label: 'Analysis History', path: '/history', icon: 'clock' },
  { label: 'Settings', path: '/options', icon: 'cog' },
];
---

<aside class="sidebar w-1/6 flex flex-col justify-between min-h-screen text-white">
  <div class="flex flex-col items-center mt-4">
    <nav class="flex items-center justify-center text-3xl font-bold h-20">
      ajajaj detector
    </nav>

    <ul class="space-y-3 list-none p-2 w-full">
      {navItems.map((item) => {
        const Icon = iconMap[item.icon as keyof typeof iconMap];
        return (
          <li class="">
            <button
              onclick={`location.href='${item.path}'`}
              class="sidebar-btn text-lg w-full flex items-end justify-end"
            >
              <Icon class="w-5 h-5" />
              {item.label}
            </button>
          </li>
        );
      })}
    </ul>
  </div>

  <div class="p-2 w-full">
    <button
      onclick="location.href='/'"
      class="sidebar-btn text-lg w-full"
    >
      <UserIcon class="w-6 h-6 border-2 border-white rounded-full p-0.5" />
      User
    </button>
  </div>
</aside>
