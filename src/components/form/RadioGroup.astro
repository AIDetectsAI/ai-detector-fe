---
export interface Props {
  name: string;
  label?: string;
  options: Array<{ value: string; label: string; checked?: boolean }>;
  onclick?: string;
}

const { 
  name,
  label,
  options,
  onclick
} = Astro.props;

const labelClasses = 'block text-sm font-medium text-gray-700 mb-4';
const radioClasses = 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300';
const optionLabelClasses = 'flex items-center';
const optionTextClasses = 'ml-2 text-sm text-gray-700';
---

<div>
  {label && (
    <label class={labelClasses}>
      {label}
    </label>
  )}
  
  <div class="space-y-3">
    {options.map((option) => (
      <label class={optionLabelClasses}>
        <input 
          type="radio" 
          name={name} 
          value={option.value} 
          checked={option.checked}
          class={radioClasses}
          onclick={onclick}
        />
        <span class={optionTextClasses}>{option.label}</span>
      </label>
    ))}
  </div>
</div>
