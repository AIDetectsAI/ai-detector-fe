---
export interface Props {
  id: string;
  name: string;
  label?: string;
  required?: boolean;
  onclick?: string;
  class?: string;
}

const { 
  id,
  name,
  label,
  required = false,
  onclick,
  class: className = ''
} = Astro.props;

const selectClasses = `w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white ${className}`;
const labelClasses = 'block text-sm font-medium text-gray-700 mb-2';
---

<div>
  {label && (
    <label for={id} class={labelClasses}>
      {label}
    </label>
  )}
  <select 
    id={id}
    name={name}
    required={required}
    onclick={onclick}
    class={selectClasses}
  >
    <slot />
  </select>
</div>
