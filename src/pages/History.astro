---
import Layout from '../layouts/Layout.astro';
import AnalysisItem from '../components/AnalysisItem.astro';
---

<Layout title="Analysis History">
  <div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Analysis History</h1>
    <p class="text-gray-600 mb-8">Browse the history of your analyses</p>

    <section class="mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Yesterday</h2>
      
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
        <AnalysisItem 
          imageName="notarealimage.jpg"
          percentage={90}
          clickable={true}
        >
          <button class="text-blue-600 hover:text-blue-800 text-sm font-medium px-3 py-1 rounded hover:bg-blue-50 transition-colors duration-200">
            Details
          </button>
        </AnalysisItem>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">Last Week</h2>
      
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
        <AnalysisItem 
          imageName="notarealimage.jpg"
          percentage={90}
          clickable={true}
        >
          <button class="text-blue-600 hover:text-blue-800 text-sm font-medium px-3 py-1 rounded hover:bg-blue-50 transition-colors duration-200">
            Details
          </button>
        </AnalysisItem>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">June</h2>
      
      <div class="bg-white rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
        <AnalysisItem 
          imageName="notarealimage.jpg"
          percentage={90}
          clickable={true}
        >
          <button class="text-blue-600 hover:text-blue-800 text-sm font-medium px-3 py-1 rounded hover:bg-blue-50 transition-colors duration-200">
            Details
          </button>
        </AnalysisItem>
      </div>
    </section>

    <div class="text-center py-12 text-gray-500">
      <p class="text-sm">No more analysis history to display</p>
    </div>
  </div>
</Layout>