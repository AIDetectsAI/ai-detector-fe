import Layout from '../layouts/Layout.astro';
import styles from '../styles/index.module.css';
---

<Layout>
	<form class={styles.content}>
		<h1>Sign In</h1>
	</form>
			
	<form class={styles.loginform}>
		<label for="email">Email</label>
		<input type="email" id="email" name="email" required />

		<label for="password">Password</label>
		<input type="password" id="password" name="password" required />

		<button class="big-btn px-4 py-3 gap-2" type="submit">Sign In</button>

		<div class={styles.links}>
			<a onclick="alert('Work In Progress')">Forgot password?</a>
			<a onclick="alert('Work In Progress')">Sign up</a>
		</div>
	</form>

