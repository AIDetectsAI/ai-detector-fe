---
import Layout from '../layouts/Layout.astro';
---
    <script>//placeholder routing
        import("../utils/placeholder_routing.ts").then(({ checkLogin }) => checkLogin());
    </script>

<Layout title="Settings">
  <div class="max-w-2xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Settings</h1>
    <p class="text-gray-600 mb-8">Account and application settings</p>
    
    <form class="space-y-8">
      <section>
        <h2 class="text-xl font-semibold text-gray-800 mb-6">User Profile</h2>
        
        <div class="space-y-4">
          <div>
            <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
              Username
            </label>
            <input 
              type="text" 
              id="username" 
              name="username" 
              placeholder="Your username"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              onclick="alert('Work In Progress')"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="ilovefigma123@gmail.com"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              onclick="alert('Work In Progress')"
            />
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-xl font-semibold text-gray-800 mb-6">Application Language</h2>
        
        <div>
          <label for="language" class="block text-sm font-medium text-gray-700 mb-2">
            Language
          </label>
          <select 
            id="language" 
            name="language"
            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white"
            onclick="alert('Work In Progress')"
          >
            <option value="en">English</option>
            <option value="pl">Polish</option>
          </select>
        </div>
      </section>

      <section>
        <h2 class="text-xl font-semibold text-gray-800 mb-6">Theme</h2>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-4">
            Choose theme
          </label>
          
          <div class="space-y-3">
            <label class="flex items-center">
              <input 
                type="radio" 
                name="theme" 
                value="light" 
                checked
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300"
                onclick="alert('Work In Progress')"
              />
              <span class="ml-2 text-sm text-gray-700">Light</span>
            </label>
            
            <label class="flex items-center">
              <input 
                type="radio" 
                name="theme" 
                value="dark"
                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300"
                onclick="alert('Work In Progress')"
              />
              <span class="ml-2 text-sm text-gray-700">Dark</span>
            </label>
          </div>
        </div>
      </section>

      <div class="pt-6">
        <button 
          type="button"
          class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          onclick="alert('Work In Progress')"
        >
          Save Changes
        </button>
      </div>
    </form>
  </div>
</Layout>